<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.0.0//EN"
"http://www.liferay.com/dtd/liferay-service-builder_6_0_0.dtd">

<service-builder package-path="org.portlets.lia.mine">
	<author>Vladimir Frolov</author>

	<namespace>IR</namespace>

	<entity name="IRIssue" local-service="true" remote-service="false">
		<column name="issueId" type="long" primary="true" />

		<column name="summary" type="String" />
		<column name="requester" type="String" />
		<column name="priority" type="String" />

		<order by="asc">
			<order-column name="requester" />
		</order>

		<finder name="S_R" return-type="Collection">
			<finder-column name="summary" />
			<finder-column name="requester" />
		</finder>
	</entity>
</service-builder>



